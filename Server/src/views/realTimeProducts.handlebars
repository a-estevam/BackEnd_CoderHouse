<h1>Cadastrar novo produto</h1>
<div class="container">
  <form id="productForm">
    <input type="text" name="title" placeholder="Título" required />
    <textarea name="description" placeholder="Descrição" required></textarea>
    <input type="number" step="0.01" name="price" placeholder="Preço" required />
    <input type="url" name="thumbnail" placeholder="URL da imagem" required />
    <input type="number" name="stock" placeholder="Estoque" required />
    <input type="text" name="category" placeholder="Categoria" required />
    <select name="status" required>
      <option value="">Selecione status</option>
      <option value="disponível">Disponível</option>
      <option value="indisponível">Indisponível</option>
    </select>
    <input type="text" name="code" placeholder="Código do item" required />
    <button type="submit">Cadastrar</button>
  </form>

  <div>
    <h2>Produtos cadastrados</h2>
    <ul id="productList">
      {{#each products}}
        <li class="product-item">
          <h3>{{this.title}}</h3>
          <img src="{{this.thumbnail}}" alt="{{this.title}}" width="100" />
          <p><strong>Descrição:</strong> {{this.description}}</p>
          <p><strong>Preço:</strong> R$ {{this.price}}</p>
          <p><strong>Estoque:</strong> {{this.stock}}</p>
          <p><strong>Categoria:</strong> {{this.category}}</p>
          <p><strong>Status:</strong> {{this.status}}</p>
          <p><strong>Código:</strong> {{this.code}}</p>
          <button onclick="deleteProduct('{{this.id}}')">Deletar</button>
        </li>
      {{/each}}
    </ul>
  </div>
</div>

<script src="/socket.io/socket.io.js"></script>
<script src="/js/index.js"></script>
